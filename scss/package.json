{
  "name": "@thiago.ds/scss",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "stylelint './**/*.scss'",
    "fix": "yarn lint --fix",
    "prepare": "husky install",
    "build": "node src/scripts/build.js"
  },
  "dependencies": {
    "normalize-scss": "^7.0.1"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.2",
    "node-sass": "^7.0.1",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-prettier": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "yarn fix"
  }
}
